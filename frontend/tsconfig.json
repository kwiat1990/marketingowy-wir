{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true
  },
  "baseUrl": "./",
  "paths": {
    "~/*": ["./src/*"],
    "@/*": ["./src/*"]
  },
  "include": ["./src/**/*"]
}
